<h1 class="tools_title">Bienvenue sur la base de données équipements des laboratoires de génie civil de la région</h1>
<div style="clear:both"></div>



<p class="blue_title"><%= link_to "Accéder à la base de données (<span class='small'>Dernière mise à jour le #{l(find_last_update, :format => :maj_database)}</span>)", tools_path %></p>

<%= @page.parts.find_by_name("haut").content  %>

<% if ToolPublicPhoto.all.size>0 %>
<div class="scroll_assets">
  <!-- "previous page" action -->
  <div class="prevPage browse left">&nbsp;&nbsp;</div>

  <!-- root element for scrollable -->
  <div class="scrollable">

      <!-- root element for the items -->
      <div class="items">    
          <% ToolAsset.all.select{|a| a.in_scrollable.eql?(true) }.each do |a| %>
              <%= link_to image_tag(a.asset.url(:thumb)),a.tool, :title => a.legend  %>
          <% end %>
      </div>

  </div>

  <!-- "next page" action -->
  <div class="nextPage browse right">&nbsp;&nbsp;</div>
</div>

<% end %>
<div style="clear:both"></div>
<div class="tools_details">
  Logiciels : <%=  Software.count %>,  Moyens d'essai : <%=  TestEngine.count %>, Machines-outils: <%= ToolEngine.count %>, Moyens de mesure et d'analyse : <%= MeasuringEngine.count %><br/>
</div>

<%= @page.parts.find_by_name("bas").content  %><br/>
<p class="blue_title"><%= link_to "Accéder à la base de données (<span class='small'>Dernière mise à jour le #{l(find_last_update, :format => :maj_database)}</span>)", tools_path %></p>
<script>
// execute your scripts when the DOM is ready. this is a good habit
$(function() {
    // initialize scrollable
    $("div.scrollable").scrollable({
      loop: true
    }).circular().autoscroll({
      steps: 6,
      interval: 8000
    });


});
</script>


