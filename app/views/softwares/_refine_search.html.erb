  <tr>
    <td class="label"><label>Correspondant : </label></td>
    <td><%= f.select :correspondents_id_equals, (Correspondent.all.collect {|c| [ c.name, "#{c.id}"] }).sort, {:include_blank => true, :selected => params[:search] ? "#{params[:search][:correspondents_id_equals]}" : nil}, :class => "select_refine_search" %></td>
  </tr>
