<p class="blue_title">Fiche équipement</p>


<%= tools_navigation_table(@test_engine.id) %>
<div class="tool_show">
  <div class="tool_top_show"></div>
  <div class="tool_middle_show">
    <table width="100%">
      <tr>
    <% if @test_engine.tool_public_photos.size>0 %>
        <td style="max-width:300px;vertical-align:top">
        <div class="tool_image">

                <div class="ppy" id="images_scroll">
                  <ul class="ppy-imglist">
                    <% @test_engine.tool_public_photos.each do |asset| %>
                      <li>
                        <%= link_to image_tag(asset.asset.url(:profile)), asset.asset.url(:profile)  %>
                      </li>
                    <% end %>
                  </ul>
                  <div class="ppy-outer">
                      <div class="ppy-stage">
                          <div class="ppy-counter">

                          </div>
                      </div>
                      <div class="ppy-nav">
                        <a class="ppy-prev" title="Previous image"><</a>
                          <a class="ppy-next" title="Next image">></a>

                      </div>
                  </div>
              </div>
          

            <%#= image_tag(@test_engine.tool_public_photos.first.asset.url(:profile)) if @test_engine.tool_public_photos.size>0 %>
          </div>
        </td>
    <% end %>
        <td style="vertical-align:top">
          <div class="tool_infos">
            <% if @test_engine.laboratory && @test_engine.laboratory.logo_file_name %>
                  <div style="float:right;margin:10px;"><%= image_tag(@test_engine.laboratory.logo.url(:thumb)) %></div>
                <% end %>
            <label>Nom :</label> <%= @test_engine.name %><br/>
            <label>Type :</label>Moyen d'essai<br/>
            <label>Sous-type :</label> <%= @test_engine.tool_subtype %><br/>
            <label>Marque :</label> <%= @test_engine.brand %><br/>
            <label>Modèle :</label> <%= @test_engine.version %><br/>
            <label>Quantité :</label> <%= @test_engine.quantity %><br/>
            <label>Laboratoire :</label> <%= @test_engine.laboratory %><br/>
             <% if current_user %>
              <label>Entité(s) de recherche :</label> <%= @test_engine.search_entities %><br/>
              <label>Sous entité(s) :</label> <%= @test_engine.search_subentities %><br/>
            <br/><br/>
              <%= link_to "Télécharger la fiche au format PDF", to_pdf_test_engine_path(@test_engine, :format => "pdf") %>
              <% end %>
          </div>
           <div style="clear:both"></div>
        </td>
      </tr>
    </table>
   

    <div id="accordion">
      <% if current_user %>
        <h3><a href="#">Principes de fonctionnement</a></h3>
        <div><%= simple_format @test_engine.operating_principles %></div>
        <h3><a href="#">Caractéristiques techniques</a></h3>
        <div><%= simple_format @test_engine.specifications %></div>
        <h3><a href="#">Autres précisions</a></h3>
        <div>
          Document explicatif : <%= @test_engine.explanatory_document %><br/>
          Etalonnage/calibration/vérification : <%= @test_engine.calibration %><br/>
          Remarques : <%= simple_format @test_engine.calibration_comment %><br/>
          Date d'achat : <%= @test_engine.purchase_date %><br/>
          Commentaires : <%= simple_format @test_engine.comment %>
        </div>
        <h3><a href="#">Echange de l’équipement</a></h3>
        <div>
          Equipement mobile : <%= @test_engine.mi_mobility %><br/>
          Prêt possible uniquement sur le site de l’organisme propriétaire : <%= @test_engine.use_on_site ? "Oui" : "Non" %><br/>
          Emprunt possible en dehors du site de l’organisme propriétaire : <%= @test_engine.borrowing ? "Oui" : "Non" %><br/>
          Conditions de prêt et d’emprunt de l’équipement : <br/>
          Localisation sur le site : <%= simple_format @test_engine.mi_localization_on_site %><br/>
          Précisions: <%= simple_format @test_engine.localization_on_site_precision %><br/>
          N° d’enregistrement interne: <%= @test_engine.internal_number %>
        </div>
       <% end %>
        <h3><a href="#">Liens</a></h3>
        <div>
          <label>Equipement(s) lié(s) : </label>
          <%= render :partial => "tool_relations/index", :locals => {:tool => @test_engine} %><br/>
          <label>Lien web : </label>
          <%= link_to @test_engine.website, @test_engine.website unless !@test_engine.website %><br/>
         
        </div>
        <h3><a href="#">Demande d'informations</a></h3>
        <div>
         <%= render :partial => "tools/get_information", :locals => {:tool => @test_engine} %>
        </div>
        <% if current_user %>
          <h3>Correspondant(s)</h3>
          <div>
            <%= render :partial => "correspondents/index", :locals => {:correspondents => @test_engine.correspondents} %>
          </div>
        <% end %>
    </div>
  </div>
  <div class="tool_bottom_show"></div>
</div>


<p class="link_to_back">
  <%= link_to " << Retour", :back %>
</p>

<%= javascript_tag("$(function() {$('#accordion').accordion();$('#images_scroll').popeye();});") %>