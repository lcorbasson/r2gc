<h1 class="subtitle">Conditions d'utilisation Machines outil</h1>

<div class="outset">
  <table class="index">
    <thead>
      <tr>
        <th>Conditions</th>
        <th>Supprimer</th>
      </tr>
    </thead>
    <tbody>
      <% @tools_use_conditions.each do |use_condition| %>
        <tr>
          <td><%= link_to use_condition.conditions, edit_admin_use_condition_path(use_condition) %></td>
          <td><%= link_to image('remove', :alt => 'remove page'), admin_use_condition_path(use_condition), :method => :delete, :confirm => "Etes-vous sûr de vouloir supprimer cette condition ?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



