<table id="table_form">
  <tr>
    <td><label>Nom *</label></td>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <td><label>Prénom *</label></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <td><label>Laboratoire *</label></td>
    <td><%= f.select :laboratory_id, Laboratory.all.collect{|l| [l.name, l.id]}, :include_blank => true %></td>
  </tr>   
   <tr>
    <td><label>Email *</label></td>
    <td><%= f.text_field :email %></td>
  </tr>
   <tr>
    <td><label>Téléphone</label></td>
    <td><%= f.text_field :phone_number %></td>
  </tr>
   <tr>
    <td><label>Remarques</label></td>
    <td><%= f.text_area :comments %></td>
  </tr>  
   <tr>
    <td><label>Entités de recherche</label></td>
    <td><%= f.select :search_entity_id, SearchEntity.all.collect{|t| [t.name, t.id]}, :include_blank => true %></td>
  </tr>
  <tr>
    <td><label>Sous entité</label></td>
    <td><%= f.select :search_subentity_id, SearchSubentity.all.collect{|t| [t.name, t.id]}, :include_blank => true %></td>
  </tr>
   <tr>
    <td><label>Equipements</label></td>
    <td><%= f.select :tool_ids, Tool.all.collect{|t| [t.name, t.id]}, {},:multiple => true %></td>
  </tr>
</table>


