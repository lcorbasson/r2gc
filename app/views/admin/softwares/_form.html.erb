<table id="table_form">
  <tr>
    <td><label>Nom</label></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><label>Sous type</label></td>
    <td><%= f.select :tool_subtype, ToolSubtype.all{|s| [s.name, s.id]} %></td>
  </tr>
  <tr>
    <td><label>Marque</label></td>
    <td><%= f.text_field :brand %></td>
  </tr>
  <tr>
    <td><label>Version</label></td>
    <td><%= f.text_field :version %></td>
  </tr>
  <tr>
    <td><label>Quantité</label></td>
    <td><%= f.text_field :quantity %></td>
  </tr>
  <tr>
    <td><label>Organisme</label></td>
    <td><%= f.select :agency, Agency.all.collect{|a| [a.name, a.id]} %></td>
  </tr>
  <tr>
    <td><label>Statuts</label></td>
    <td><%= f.select :software_statuses, SoftwareStatus.all.collect{|s| [s.name, s.id]}, :multiple => true %></td>
  </tr>
  <tr>
    <td><label>Domaines d'application</label></td>
    <td><%= f.select :software_application_domains, SoftwareApplicationDomain.all.collect{|d| [d.application_domain, d.id]} %></td>
  </tr>
  <tr>
    <td><label>Précisions</label></td>
    <td><%= f.text_field :software_application_domain_comment %></td>
  </tr>
  <tr>
    <td><label>Logiciel permettant de développer des programmes à usage interne </label></td>
    <td><%= f.text_field :software_can_develop_programs %></td>
  </tr>
  <tr>
    <td><label>Description et usages du Logiciel</label></td>
    <td><%= f.text_area :software_description %></td>
  </tr>
  <tr>
    <td><label>Spécificités techniques du Logiciel</label></td>
    <td><%= f.text_area :specifications %></td>
  </tr>
  <tr>
    <td><label>Caractéristiques de partage et de diffusion du logiciel</label></td>
    <td><%= f.text_field :software_sharing_conditions %></td>
  </tr>
  <tr>
    <td><label>Commentaire(s)</label></td>
    <td><%= f.text_area :comment %></td>
  </tr>
  <tr>
    <td><label>Document explicatif</label></td>
    <td><%= f.text_field :explanatory_document %></td>
  </tr>
  <tr>
    <td><label>Lien internet</label></td>
    <td><%= f.text_field :website %></td>
  </tr>
   <tr>
    <td><label>Niveau confidentialité</label></td>
    <td><%= f.text_field :privacy %></td>
  </tr>
  <tr>
    <td><label>Equipement liés</label></td>
    <td><%= select_tag :tools, @software.new_record? ? options_for_select(Tool.all{|c| [c.name, c.id]}) : options_for_select((Tool.all-@software.to_a).collect{|c| [c.name, c.id]}), :multiple => true %></td>
  </tr>
   <tr>
    <td><label>Correspondants</label></td>
    <td><%= f.select :correspondents, Correspondent.all{|c| [c.name, c.id]}, :multiple => true %></td>
  </tr>
</table>


