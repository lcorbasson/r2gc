<table id="table_form">
  <tr>
    <td class="label_td"><label>Nom</label></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Sous type</label></td>
    <td><%= f.select :tool_subtype, ToolSubtype.all{|s| [s.name, s.id]} %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Marque</label></td>
    <td><%= f.text_field :brand %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Modèle</label></td>
    <td><%= f.text_field :version %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Quantité</label></td>
    <td><%= f.text_field :quantity %></td>
  </tr>
   <tr>
    <td class="label_td"><label>Laboratoire</label></td>
    <td><%= f.select :laboratory_id, Laboratory.all.collect{|a| [a.name, a.id]} %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Principes de fonctionnement</label></td>
    <td><%= f.text_area :operating_principles %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Caractéristiques techniques</label></td>
    <td><%= f.text_area :specifications %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Document explicatif </label></td>
    <td><%= f.text_field :explanatory_document %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Lien internet</label></td>
    <td><%= f.text_field :website %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Etalonnage/calibration/vérification</label></td>
    <td><%= f.text_field :calibration %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Commentaire etalonnage</label></td>
    <td><%= f.text_area :calibration_comment %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Date d’achat de l’équipement</label></td>
    <td><%= f.text_field :purchase_date %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Autre(s) commentaire(s)</label></td>
    <td><%= f.text_field :comment %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Equipement mobile</label></td>
    <td>
      <%=  f.radio_button :mi_mobility, true %>Oui
      <%=  f.radio_button :mi_mobility, false %>Non
      </td>
  </tr>
   <tr>
    <td class="label_td"><label>Prêt possible(uniquement sur le site de l’organisme propriétaire)</label></td>
    <td><%=  f.radio_button :use_on_site, true %>Oui
      <%=  f.radio_button :use_on_site, false %>Non</td>
  </tr>
  <tr>
    <td class="label_td"><label>Emprunt possible(en dehors du site de l’organisme propriétaire(</label></td>
    <td><%=  f.radio_button :borrowing, true %>Oui
      <%=  f.radio_button :borrowing, false %>Non</td>
  </tr>
  <tr>
    <td class="label_td"><label>Conditions de prêt et d’emprunt de l’équipement</label></td>
    <td><%= f.select :use_condition_ids, UseCondition.for_test_and_measuring.collect{|c| [c.conditions, c.id]},{}, {:multiple => true} %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Localisation sur le site</label></td>
    <td><%= f.text_field :mi_localization_on_site %></td>
  </tr> 
  <tr>
    <td class="label_td"><label>N° d’enregistrement interne</label></td>
    <td><%= f.text_field :internal_number %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Niveau confidentialité</label></td>
    <td><%= f.text_field :privacy %></td>
  </tr>
  <tr>
    <td class="label_td"><label>Equipement liés</label></td>
    <td><%= select_tag "tools", @test_engine.new_record? ? options_for_select(Tool.all.collect{|c| [c.name, c.id]}) : options_for_select((Tool.all-@test_engine.to_a).collect{|c| [c.name, c.id]}), :multiple => true %></td>
  </tr>
   <tr>
    <td class="label_td"><label>Correspondants</label></td>
    <td><%= f.select :correspondent_ids, Correspondent.all.collect{|c| [c.name, c.id]},{}, :multiple => true %></td>
  </tr>
</table>




