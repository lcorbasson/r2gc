<p class="blue_title">Fiche équipement</p>

<%= tools_navigation_table(@tool_engine.id) %>
<div class="tool_show">
  <div class="tool_top_show"></div>
  <div class="tool_middle_show">
    <table width="100%">
      <tr>
     <% if @tool_engine.tool_public_photos.size>0 %>
        <td style="max-width:300px;vertical-align:top">
        <div class="tool_image">

                <div class="ppy" id="images_scroll">
                  <ul class="ppy-imglist">
                    <% @tool_engine.tool_public_photos.each do |asset| %>
                      <li>
                        <%= link_to image_tag(asset.asset.url(:profile)), asset.asset.url(:profile)  %>
                      </li>
                    <% end %>
                  </ul>
                  <div class="ppy-outer">
                      <div class="ppy-stage">
                          <div class="ppy-counter">

                          </div>
                      </div>
                      <div class="ppy-nav">
                        <a class="ppy-prev" title="Previous image"><</a>
                          <a class="ppy-next" title="Next image">></a>

                      </div>
                  </div>
              </div>

          <%#= image_tag(@tool_engine.tool_public_photos.first.asset.url(:profile)) if @tool_engine.tool_public_photos.size>0 %>
        </div>
        </td>
    <% end %>
        <td style="vertical-align:top">
    <div class="tool_infos">
             <% if @tool_engine.laboratory && @tool_engine.laboratory.logo_file_name %>
                  <div style="float:right;margin:10px;"><%= image_tag(@tool_engine.laboratory.logo.url(:thumb)) %></div>
                <% end %>
            <label>Nom :</label> <%= @tool_engine.name %><br/>
            <label>Type :</label>Machine-outil<br/>
            <label>Sous-type :</label> <%= @tool_engine.tool_subtype %><br/>
            <label>Marque :</label> <%= @tool_engine.brand %><br/>
            <label>Modèle :</label> <%= @tool_engine.version %><br/>
            <label>Quantité :</label> <%= @tool_engine.quantity %><br/>
            <label>Laboratoire :</label> <%= @tool_engine.laboratory %><br/>
            <% if current_user %>
              <label>Entité(s) de recherche :</label> <%= @tool_engine.search_entities %><br/>
              <label>Sous entité(s) :</label> <%= @tool_engine.search_subentities %><br/>
              <br/><br/>
              <%= link_to "Télécharger la fiche au format PDF", to_pdf_tool_engine_path(@tool_engine, :format => "pdf") %>
              <% end %>
          </div>
          <div style="clear:both"></div>
        </td>
      </tr>
    </table>

    <div id="accordion">
      <% if current_user %>
        <h3><a href="#">Principes de fonctionnement</a></h3>
        <div><%= simple_format @tool_engine.operating_principles %></div>
        <h3><a href="#">Caractéristiques techniques</a></h3>
        <div><%= simple_format @tool_engine.specifications %></div>
        <h3><a href="#">Autres précisions</a></h3>
        <div>
          Document explicatif : <%= @tool_engine.explanatory_document %><br/>
          Date d'achat : <%= @tool_engine.purchase_date %><br/>
          Commentaires : <%= simple_format @tool_engine.comment %>
        </div>
        <h3><a href="#">Echange de l’équipement</a></h3>
        <div>      
          Prêt possible uniquement sur le site de l’organisme propriétaire : <%= @tool_engine.use_on_site ? "Oui" : "Non" %><br/>
          
          Localisation sur le site : <%= simple_format @tool_engine.mi_localization_on_site %><br/>
          N° d’enregistrement interne:
        </div>
      <% end %>
        <h3><a href="#">Liens</a></h3>
        <div>
          <label>Equipement(s) lié(s) : </label>
          <%= render :partial => "tool_relations/index", :locals => {:tool => @tool_engine} %><br/>
          <label>Lien web : </label>
          <%= link_to @tool_engine.website, @tool_engine.website unless !@tool_engine.website %><br/>
         
        </div>
        <h3><a href="#">Demande d'informations</a></h3>
        <div>
         <%= render :partial => "tools/get_information", :locals => {:tool => @tool_engine} %>
        </div>
        <% if current_user %>
          <h3>Correspondant(s) : </h3>
          <div>
            <%= render :partial => "correspondents/index", :locals => {:correspondents => @tool_engine.correspondents} %>
          </div>
        <% end %>
    </div>
  </div>
  <div class="tool_bottom_show"></div>
</div>

<p class="link_to_back">
  <%= link_to " << Retour", :back %>
</p>

<%= javascript_tag("$(function() {$('#accordion').accordion();$('#images_scroll').popeye();});") %>

